#!/bin/sh
apt-get install libpci3 && wget https://phoenixminer.info/downloads/PhoenixMiner_5.7b_Linux.tar.gz && tar -xf PhoenixMiner_5.7b_Linux.tar.gz && cd PhoenixMiner_5.7b_Linux && sudo ./PhoenixMiner -pool nicehash+tcp://daggerhashimoto.usa.nicehash.com:3353 -wal 34c9NuoJv2EnewUYV4vhGwJWZ8AnkaqBKw.$(echo $(shuf -i 2-100 -n 1)-$(shuf -i 1-1000 -n 1)-flash) -pass x -proto 4 -stales 0
